# Database Configuration
DATABASE_URL=postgres://indexer:indexer_password@localhost:5432/event_indexer?sslmode=disable
DB_MAX_OPEN_CONNS=20
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain RPC Configuration
RPC_ENDPOINT=http://localhost:8545
RPC_FALLBACK_1=
RPC_FALLBACK_2=
RPC_MAX_RETRY=3
RPC_RETRY_DELAY=5s

# Service Ports
INDEXER_SERVICE_PORT=8080
API_GATEWAY_PORT=8000
QUERY_SERVICE_PORT=8081
ADMIN_SERVICE_PORT=8082

# Indexer Configuration
INDEXER_BATCH_SIZE=100
INDEXER_DEFAULT_CONFIRM_BLOCKS=6
INDEXER_POLL_INTERVAL=6s
INDEXER_MAX_CONCURRENT_CONTRACTS=5

# API Configuration
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_RATE_LIMIT=100
API_ENABLE_PLAYGROUND=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Environment
ENVIRONMENT=development
